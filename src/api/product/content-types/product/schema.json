{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "description": {
      "type": "text"
    },
    "videoURL": {
      "type": "string"
    },
    "content": {
      "type": "blocks"
    },
    "productSidebar": {
      "type": "component",
      "component": "product.product-sidebar",
      "repeatable": true
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::acre-edge-portfolio.acre-edge-portfolio",
      "inversedBy": "products"
    },
    "previewUrl": {
      "type": "string"
    },
    "postDate": {
      "type": "date"
    },
    "backgroundMedia": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "backgroundType": {
      "type": "enumeration",
      "enum": [
        "video",
        "image"
      ]
    }
  }
}
