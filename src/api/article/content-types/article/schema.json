{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Articles"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "content": {
      "type": "blocks"
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "articles"
    },
    "Date": {
      "type": "date",
      "conditions": {
        "visible": {
          "!=": [
            {
              "var": "articleType"
            },
            "event"
          ]
        }
      }
    },
    "heading": {
      "type": "string"
    },
    "subHeading": {
      "type": "string"
    },
    "previewUrl": {
      "type": "string"
    },
    "startDateTime": {
      "type": "datetime",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "articleType"
            },
            "event"
          ]
        }
      },
      "required": false,
      "unique": false
    },
    "articleType": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "news",
        "event",
        "blogPosts",
        "podcasts"
      ]
    },
    "endDateTime": {
      "type": "datetime",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "articleType"
            },
            "event"
          ]
        }
      }
    },
    "link": {
      "type": "component",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "articleType"
            },
            "event"
          ]
        }
      },
      "component": "shared.link",
      "repeatable": false
    }
  }
}
