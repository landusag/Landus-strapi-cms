{
  "collectionName": "components_shared_buttons",
  "info": {
    "displayName": "Button"
  },
  "options": {},
  "attributes": {
    "text": {
      "type": "string"
    },
    "URL": {
      "type": "string"
    },
    "target": {
      "type": "enumeration",
      "enum": [
        "_blank",
        "_self",
        "_parent",
        "_top"
      ]
    },
    "variant": {
      "type": "enumeration",
      "default": "primary",
      "enum": [
        "simple",
        "primary",
        "outline",
        "muted"
      ]
    },
    "isShowArrow": {
      "type": "boolean",
      "default": false
    },
    "arrowAlign": {
      "type": "enumeration",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "isShowArrow"
            },
            true
          ]
        }
      },
      "default": "left",
      "enum": [
        "left",
        "right"
      ]
    }
  },
  "config": {}
}
