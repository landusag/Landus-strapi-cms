{
  "collectionName": "components_sections_media_teaser_sections",
  "info": {
    "displayName": "MediaTeaserSection"
  },
  "options": {},
  "attributes": {
    "sectionName": {
      "type": "string"
    },
    "theme": {
      "type": "component",
      "component": "shared.theme",
      "repeatable": false
    },
    "headerSection": {
      "type": "component",
      "component": "shared.section-header",
      "repeatable": false
    },
    "stat": {
      "type": "component",
      "component": "shared.stat",
      "repeatable": false
    },
    "images": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "videos"
      ]
    },
    "link": {
      "type": "component",
      "component": "shared.link",
      "repeatable": true
    },
    "button": {
      "type": "component",
      "component": "shared.button",
      "repeatable": true
    },
    "layout": {
      "type": "enumeration",
      "required": true,
      "default": "content-left",
      "enum": [
        "content-left",
        "content-right",
        "content-top",
        "content-bottom"
      ]
    },
    "MediaType": {
      "type": "enumeration",
      "enum": [
        "image",
        "video"
      ]
    },
    "MediaURL": {
      "type": "string",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "MediaType"
            },
            "video"
          ]
        }
      }
    },
    "enableOverlay": {
      "type": "boolean",
      "default": false
    },
    "QuickFact": {
      "type": "component",
      "component": "shared.quick-fact-item",
      "repeatable": true
    },
    "postButtonText": {
      "type": "string"
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    }
  },
  "config": {}
}
